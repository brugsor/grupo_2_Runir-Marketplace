<div class="rock-bg">
  <section class="section-form">
  <div class="div-form">
    <h1 >Iniciar sesión </h1>
  <main class="login">
    
    
    <form action="/login" method="POST">
      <!--Usuario -->
      <label for="form-input1" class="label-input"><i class="fas fa-user"></i> Usuario</label>
      <div><input type="input" class="class-input" placeholder="Correo electrónico o nombre de usuario"></div>
