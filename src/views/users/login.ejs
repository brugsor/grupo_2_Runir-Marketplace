      <label for="form-input2" class="label-input"><i class="fas fa-key"></i> Contraseña</label>
      <div><input type="password" class="text-input" placeholder="Contraseña"></div>
      <!--Button iniciar sesión-->
      <div><button type="submit"  class="ingresar">Iniciar sesión</button></div>
      <!--Recuperación de contraseña-->
      <section class="Recuperacion">
        <div><h2><a href="#"> ¿Olvidaste tu contraseña?</a></h2></div>
        <!--redirigir a Formulario de registro-->
        <div><h2> Si aún no eres cliente:</h2></div>
        <div><h2><a href="/register"> Registrate aquí</a></h2></div>
     </section>
  </form>
  </main>
</div>
  </section>
</div>

