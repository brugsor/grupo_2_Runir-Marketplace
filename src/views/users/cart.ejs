<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/head') %>

  <body class="d-flex flex-column min-vh-100">
    <!-- Load Facebook SDK for JavaScript -->
    <div id="fb-root"></div>
    <script>
      window.fbAsyncInit = function () {
        FB.init({
          xfbml: true,
          version: 'v9.0'
        });
      };

      (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/es_LA/sdk/xfbml.customerchat.js';
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>

    <!-- Your Chat Plugin code -->
    <div class="fb-customerchat" attribution=setup_tool page_id="101757705041113"
      logged_in_greeting="Hola!! Escríbenos para solicitar más información!"
      logged_out_greeting="Hola!! Escríbenos para solicitar más información!">
    </div>

    <%- include ('../partials/header') %>

    <div class="woods-bg">
      <br /><br />
      <section class="section-content">
        <section class="section-cart">
          <div class="div-cart">
            <h1 class="h-title">CARRITO</h1>
            <h5><a href="/">Seguir Comprando</a></h5>
            <div class="div-cart-son">
              <div class="div-product">
                <div class="div-img">
                  <img class="products-img" src="/img/feingur.jpg" alt="product">
                  <p class="pd-product">FEINGUR</p>
                </div>
                <div class="div-details"><br />
                  <p class="pd-price">$260</p><br />
                  <input type="number" placeholder="Cantidad" class="number_hidro" name="number_hidro" min="1" max="99"
                    style="width:90px">
                </div>
                <button input="submit" class="btn-delete"><i class="fas fa-trash-alt"></i>Eliminar</button>
              </div>
            </div><br />
            <div class="div-cart-son">
              <div class="div-product">
                <div class="div-img">
                  <img class="products-img" src="/img/haegl.jpg" alt="product">
                  <p class="pd-product">HÆGL</p>
                </div>
                <div class="div-details"><br />
                  <p class="pd-price">$260</p><br />
                  <input type="number" placeholder="Cantidad" class="number_hidro" name="number_hidro" min="1" max="99"
                    style="width:90px">
                </div><br />
                <button input="submit" class="btn-delete"><i class="fas fa-trash-alt"></i>Eliminar</button>
              </div>
            </div><br />
          </div>
        </section>
        
        <section class="section-total">
          <div class="div-total">
            <h1 class="h-title">Total</h1>
            <div class="total-flex">
              <div class="div-total-son">
                <div class="dp-total">
                  <p>Total:</p>
                  <p style="color: #4da395; font-size: 25px;">$520</p>
                </div>
                <div class="dp-total">
                  <p>Producto(s):</p>
                  <p style="color: #4da395; font-size: 25px;">2</p>
                </div>
              </div>
              <button class="btn-total" input="submit"><i class="fas fa-check-circle"></i> Confirmar</button>
            </div>
          </div>
        </section>
      </section><br /><br />
    </div>

    <%- include ('../partials/footer') %>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js"
      integrity="sha384-BOsAfwzjNJHrJ8cZidOg56tcQWfp6y72vEJ8xQ9w6Quywb24iOsW913URv1IS4GD"
      crossorigin="anonymous"></script>
    <script>
      if (!("ontouchstart" in document.documentElement)) {
        document.documentElement.className += " no-touch";
      }
    </script>

  </body>

</html>